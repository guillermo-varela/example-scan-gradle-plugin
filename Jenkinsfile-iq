pipeline {
  agent any
  tools {
    jdk 'OpenJDK 8'
  }
  stages {
    stage('Nexus IQ Scan') {
      environment {
        IQ_CREDENTIALS = credentials('iq.credentials')
      }
      steps {
        // Only needed if the gradle project and wrapper are in a subdirectory
        dir('intentionally-vulnerable-gradle-project') {
          sh './gradlew nexusIQScan  --no-daemon'
        }
      }
    }
  }
}
